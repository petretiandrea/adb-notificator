<idea-plugin>
    <id>com.github.petretiandrea.adbnotificator</id>
    <name>adb-notificator</name>
    <vendor>petretiandrea</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>org.jetbrains.android</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.androidstudio</depends>
    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">
        <defaultProjectTypeProvider type="Android"/>
        <toolWindow id="adb-notificator"
                    factoryClass="io.github.notificator.NotificatorToolWindowFactory"
                    secondary="true" icon="AllIcons.General.Modified" anchor="right"/>
    </extensions>
</idea-plugin>
